  "scripts": {
    "doc:api:generate": "php vendor/bin/apigen generate --source='./src' --destination='./build/api/' --access-levels='public,protected,private' --template-theme=default --title='DreadLabs - AppMigrationLock - NinjaMutex' --no-source-code"
