    {
      "name": "Thomas Juhnke",
      "email": "dev@van-tomas.de"
    }
  ],
  "require": {
    "arvenil/ninja-mutex": "~0.5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.6",
    "phpmd/phpmd": "~2.2",
    "pdepend/pdepend": "~2.0",
    "phploc/phploc": "~2.1",
    "squizlabs/php_codesniffer": "~2.3",
    "sebastian/phpcpd": "~2.0",
    "satooshi/php-coveralls": "~0.6",
    "codeclimate/php-test-reporter": "dev-master",
    "apigen/apigen": "~4.1"
  },
  "autoload": {
    "psr-4": {
      "DreadLabs\\AppMigration\\Lock\\NinjaMutex\\": "src/",
      "DreadLabs\\AppMigration\\Lock\\NinjaMutex\\Tests\\": "tests/"
